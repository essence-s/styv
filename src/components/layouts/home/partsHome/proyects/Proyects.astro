---
import ahiseve from "./files/ahiseve.png";
import darkpan from "./files/darkpan.png";
import poke from "./files/poke.png";
import p1 from "./files/p1.png";
import ds from "./files/ds.png";
import ApliIMC from "./files/ApliIMC.png";
// import VQ from "./files/video-question.png";
import { css, html, js, ireact, info, astro } from "./files/tech";

let techs = {
    js: {
        name: "javascript",
        src: js.src,
    },
    html: {
        name: "html",
        src: html.src,
    },
    css: {
        name: "css",
        src: css.src,
    },
    ireact: {
        name: "react",
        src: ireact.src,
    },
    astro: {
        name: "astro",
        src: astro.src,
    },
};

let d = [
    {
        imgWeb: ahiseve.src,
        link: "https://ahiseve.vercel.app/",
        techs: [techs.js, techs.html, techs.css, techs.ireact, techs.astro],
        infoText:
            "Cree una sala con amigos y sincronize, controle, transmita un video",
        iInfo: info.src,
    },
    {
        imgWeb: darkpan.src,
        link: "https://essence-s.github.io/darkpan/",
        techs: [techs.js, techs.html, techs.css, techs.ireact],
        infoText: "Este proyecto tiene animaciones simples y un diseño bonito.",
        iInfo: info.src,
    },
    {
        imgWeb: poke.src,
        link: "https://essence-s.github.io/poke/",
        techs: [techs.js, techs.html, techs.css, techs.ireact],
        infoText:
            "Buscar cualquier pokemon y ver sus estadisticas, evoluciones, etc.",
        iInfo: info.src,
    },
    // {
    //   imgWeb: VQ.src,
    //   link: "https://essence-s.github.io/video-question/",
    //   techs: [techs.js, techs.html, techs.css, techs.ireact],
    //   infoText: 'web - responder las preguntas con un video o audio',
    //   iInfo: info.src,
    // },
    {
        imgWeb: p1.src,
        link: "https://essence-s.github.io/p1/",
        techs: [techs.js, techs.html, techs.css, techs.ireact],
        infoText: "Animaciones y diseño simple.",
        iInfo: info.src,
    },
    {
        imgWeb: ds.src,
        link: "https://essence-s.github.io/ds/",
        techs: [techs.js, techs.html, techs.css, techs.ireact],
        infoText: "Web con diseño mas empresarial, con slider hero.",
        iInfo: info.src,
    },
    {
        imgWeb: ApliIMC.src,
        link: "https://essence-s.github.io/ApliIMC/",
        techs: [techs.js, techs.html, techs.css],
        infoText:
            "El proyecto calcula el peso ideal de una persona, te dice en que promedio estas.",
        iInfo: info.src,
    },
];
---

<style>
    .proyects {
        color: var(--color-text);
        background: linear-gradient(281deg, #19191a, #1a1a1c);
        min-height: 100vh;
        display: flex;
        font-family: "Poppins", sans-serif;
    }

    .proyects__container {
        margin: auto;
        max-width: 900px;
        width: 100%;
        padding: 100px 30px;
    }

    .proyects__content {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 55px;
    }

    .proyects__title {
        font-size: 2.5rem;
        font-family: var(--font-family);
    }

    .proyects__zone-info {
        width: 100px;
    }

    .proyects__illu {
        /* width: 320px; */
        /* height: 270px; */
        /* background: linear-gradient(0deg, #6f70f2, #9b74cd); */
        border-radius: 15px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        /* grid-template-columns: repeat(3, minmax(250px, 1fr)); */
        padding: 20px 15px 15px 15px;
        gap: 16px;
        align-items: center;
    }

    .proyects__img {
        border-radius: 8px;
        transition: 0.3s;
        display: flex;
        flex-direction: column;
        text-align: start;
    }

    .proyects__img > a {
        display: flex;
        position: relative;
    }

    .proyects__img .proyects__img-web {
        width: 93%;
        height: 100%;
        border-radius: 8px;
        position: relative;
        z-index: 1;
        /* transform: rotate3d(1, 7, 1, 350deg); */
        animation: floatP 2.5s alternate infinite ease-in-out;
        margin: auto;
        box-shadow: 5px 4px 3px 0px #0000001c;
        top: 37px;
    }

    @keyframes floatP {
        0% {
            transform: rotate3d(1, 7, 1, 357deg) translateY(-5px);
        }

        100% {
            transform: rotate3d(1, 7, 1, 362deg) translateY(-10px);
        }
    }

    .proyects__info {
        padding: 20px 14px;
        display: flex;
        gap: 10px;
        flex-direction: column;
        background: #28292d;
        border: 1px #ffffff17 solid;
        border-radius: 8px;
        padding-top: 50px;
        position: relative;
    }

    .proyects__info > a {
        text-decoration: none;
        color: inherit;
    }

    .proyects__img-tech {
        display: flex;
        flex-wrap: wrap;
        gap: 4px 3px;
        color: #cecece;
        justify-content: center;
    }

    .proyects__img-tech-img span {
        width: 18px;
        height: 18px;
        display: inline-block;
    }

    .proyects__img-tech-img {
        padding: 4px 10px;
        border: solid 1px #3f3f3f;
        border-radius: 15px;
        font-size: 0.63rem;
        display: flex;
        align-items: center;
        gap: 4px;
        width: max-content;
        background: linear-gradient(271deg, #ffffff12, #ffffff05);
        box-shadow: 2px 2px 3px 0px #0000001f;
    }

    .proyects__img-tech img {
        width: 100%;
    }

    .proyects__info-proyect {
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
    }

    .proyects__info-proyect img {
        width: 20px;
        height: 20px;
        background: white;
        border-radius: 50%;
    }

    .proyects__info-text {
        padding: 8px 15px;
        border-radius: 5px;
        min-width: 220px;
        font-size: 0.82rem;
        display: flex;
        align-items: center;
    }

    .proyects__info-button-deploy {
        gap: 5px;
        padding: 4px 10px;
        border: solid 1px #3f3f3f;
        border-radius: 15px;
        font-size: 0.7rem;
        display: flex;
        align-items: center;
        width: max-content;
        background: linear-gradient(90deg, #0000001c, #00000021);
        box-shadow: 2px 2px 3px 0px #0000001f;
        margin: auto;
    }

    .proyects__info-button-deploy svg {
        width: 20px;
    }

    @media screen and (max-width: 700px) {
        .proyects__container {
            padding: 50px 30px;
        }

        .proyects__content {
            flex-direction: column;
        }

        .proyects__illuImg:hover {
            transform: scale(1.5);
        }

        .proyects__illuImg:nth-child(1):hover {
            transform: scale(1.2);
        }

        .proyects__img-tech-img {
            font-size: 0.8rem;
        }
    }
</style>

<div class="proyects" id="proyects">
    <div class="proyects__container">
        <p class="proyects__title">Proyectos</p>

        <div class="proyects__content">
            <div class="proyects__illu">
                {
                    d.map((r, i) => {
                        return (
                            <div class="proyects__img">
                                <a
                                    href={r.link}
                                    target="_blank"
                                    rel="noreferrer"
                                >
                                    <img
                                        class="proyects__img-web"
                                        src={r.imgWeb}
                                        alt="darkpan"
                                    />
                                </a>
                                <div class="proyects__info">
                                    <div class="proyects__img-tech">
                                        {r.techs.map((tech, i) => {
                                            return (
                                                <div class="proyects__img-tech-img">
                                                    <span>
                                                        <img
                                                            src={tech.src}
                                                            alt=""
                                                        />
                                                    </span>
                                                    {tech.name}
                                                </div>
                                            );
                                        })}
                                    </div>

                                    <div class="proyects__info-text">
                                        {r.infoText}
                                    </div>

                                    <a
                                        href={r.link}
                                        target="_blank"
                                        rel="noreferrer"
                                    >
                                        <div class="proyects__info-button-deploy">
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                class="icon icon-tabler icon-tabler-brand-git"
                                                width={24}
                                                height={24}
                                                viewBox="0 0 24 24"
                                                stroke-width="2"
                                                stroke="currentColor"
                                                fill="none"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            >
                                                <path
                                                    stroke="none"
                                                    d="M0 0h24v24H0z"
                                                    fill="none"
                                                />
                                                <path d="M16 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" />
                                                <path d="M12 8m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" />
                                                <path d="M12 16m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" />
                                                <path d="M12 15v-6" />
                                                <path d="M15 11l-2 -2" />
                                                <path d="M11 7l-1.9 -1.9" />
                                                <path d="M13.446 2.6l7.955 7.954a2.045 2.045 0 0 1 0 2.892l-7.955 7.955a2.045 2.045 0 0 1 -2.892 0l-7.955 -7.955a2.045 2.045 0 0 1 0 -2.892l7.955 -7.955a2.045 2.045 0 0 1 2.892 0z" />
                                            </svg>
                                            <span>Github Pages</span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        );
                    })
                }
            </div>
        </div>
    </div>
</div>
